{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "pastery-pop",
  "version": "0.1.0",
  "identifier": "com.coldmon.pastery-pop",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1421",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../build"
  },
  "app": {
    "windows": [
      {
        "title": "Pastery Pop",
        "width": 350,
        "height": 450,
        "resizable": false,
        "maximizable": false,
        "minimizable": false,
        "alwaysOnTop": true,
        "skipTaskbar": true,
        "decorations": false,
        "transparent": true,
        "visible": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
